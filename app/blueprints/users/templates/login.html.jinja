{% extends "base.html.jinja" %}
{% from "macros.html.jinja" import form_card, form_input %}

{% block content %}
{% call form_card('Login') %}
    <form method="POST">
        {{ form_input('username', placeholder='Benutzername', required=true) }}
        {{ form_input('password', type='password', placeholder='Passwort', required=true) }}
        <button type="submit" class="btn btn-primary">Login</button>
        <a href="{{ url_for('users.register') }}" class="btn btn-link">Registrieren</a>
    </form>
{% endcall %}
{% endblock %}